help = change tidb.version to local tikv binary to support br-text
abbr = patch-kv|tikv|kv

[arg]
tikv-bin-path = ''
origin-version|version|ver = ''
debug-build|debug = false

[arg2env]
br.tikv-bin = tikv-bin-path
br-text.tikv.debug-build = debug-build
tidb.version = origin-version

[env]
tidb.version = read : may-write
